{
  "name": "xRAG Development",
  "image": "xrag",
  "workspaceFolder": "/opt/app",
  "workspaceMount": "source=${localWorkspaceFolder},target=/opt/app,type=bind",
  "runArgs": ["--gpus", "all"],
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance"
      ]
    }
  }
}